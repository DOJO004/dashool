<div>
  <h2>
    <%= @profile.name%>
    <%= link_to "Edit Profile", edit_profile_path(current_user.profile.id) if current_user.profile.name === @profile.name %>
  </h2>
  <p>
    所在地:
    <%= @profile.address%>
  </p>
  <p>
    簡介: 
    <% if @profile.descript.gsub!("\r\n", "<br>").nil? %>
      <%= @profile.descript%>
    <% else %>
      <%= @profile.descript.gsub!("\r\n", "<br>").html_safe%>
    <% end %>
  </p>
  <div>
    作品區
  </div>
</div>