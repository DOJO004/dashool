 <% if current_user && current_user.profile.id != params[:id] %>
  <div>
    <% if current_user.followed_profiles.include?(@profile) %>
      <%= button_to '追蹤中', profile_collect_path(@profile), method: :delete, class:"my-4 rounded-md text-gray-500 w-full", data: {turbo_confirm: "確定要取消追蹤嗎?"} %>
    <% else %>
      <%= button_to '追蹤', profile_collects_path(@profile), method: :post, class:" my-4 rounded-md bg-blue-500 p-1 w-full" %>
    <% end %>
  </div>
<% end %>