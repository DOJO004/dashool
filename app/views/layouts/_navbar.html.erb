<div data-controller="navbar" class="relative shadow-lg " >
  <div class="flex items-center justify-between">
    <%= link_to root_path do%>
      <%= image_tag "logo.png", class:" w-12"%>
    <% end %>
    <div data-action="click->navbar#showMenu" class="p-1 " >
      <span  class="block w-8 h-1 my-2 transition-all duration-500 bg-white rounded-md "></span>
      <span  class="block w-8 h-1 my-2 transition-all duration-500 bg-white rounded-md "></span>
    </div>
  </div>
  <div data-navbar-target="menu" class="fixed top-0 left-0 z-10 w-full h-0 overflow-hidden transition-all duration-500 bg-neutral-900 ">
    <p class="my-4 mt-12 text-center ">About Us</p>
    <% if current_user %>
      <%= link_to "Profile", user_path(id: current_user.id), class:"my-4 mt-12 block text-center"%>
      <%= link_to "Setting", setting_path, class:"my-4 mt-12 block text-center"%>
      <%= button_to "Logout", destroy_user_session_path, data:{ turbo: false }, method: :delete, class:"my-4 mt-12  w-full "%>
    <% else %>
      <%= link_to "Login", new_user_session_path, class:"my-4 mt-12  text-center block " %>
      <%= link_to "Create Account", new_user_registration_path, class:"my-4 mt-12  text-center block bg-amber-900 w-fit mx-auto p-2 rounded-md " %>
    <% end %>
    <button data-action="click->navbar#closeMenu" class="absolute top-0 right-0 p-2 ">X</button>
  </div>
</div>