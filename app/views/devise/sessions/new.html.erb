<div class="flex">
  <div class="w-full max-w-[512px] mx-auto">
    <h2 >Log in</h2>
    <div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="relative my-4">
          <%= image_tag "icons/email.svg", class:" absolute top-1/2 -translate-y-1/2 left-2"%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full  text-black pl-12 bg-gray-300", placeholder: "email"%>
        </div>
        <div class="relative my-4">
          <%= image_tag "icons/lock.svg", class:" absolute top-1/2 -translate-y-1/2 left-2"%>
          <%= f.password_field :password, autocomplete: "current-password", class:"w-full  text-black pl-12 bg-gray-300", placeholder: "passwrod"%>
        </div>
        <div class="w-full p-2 my-4 text-center bg-rose-950">
          <%= f.submit "Sign in", class:"w-full cursor-pointer" %>
        </div>
      <% end %>
    </div>
    <div class="relative my-12">
      <hr>
      <p class="absolute top-0 w-12 text-center -translate-x-1/2 -translate-y-1/2 bg-black left-1/2">or</p>
    </div>
    <div class="flex justify-center my-12">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false } do%>
          <%= image_tag "google_icon.png", class:"w-8"%>
        <% end %>
      <% end %>
    </div>
    <div class="text-center ">
      <div class="my-4">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      </div>
      <div class="flex items-center justify-center gap-2 my-4">
        <p><%= "Don't have an account?"%> </p>
        <%= link_to "Sign Up", new_registration_path(resource_name), class:"text-blue-500" %><br />
      </div>
    </div>
  </div>
  <div class="hidden w-full lg:block">
    <%= image_tag "logo_with_text.png"%>
  </div>
</div>