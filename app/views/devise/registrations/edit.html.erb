<div class="w-full max-w-3xl mx-auto">
  <h2><%= t("edit_user.title")%></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="my-4">
      <%= f.label :full_name, t("edit_user.full_name") %>
      <%= f.text_field :full_name, value: current_user.full_name, class:"w-full rounded-md text-black" %>
    </div>
    <div class="my-4">
      <%= f.label :password, t("edit_user.new_password") %>
      <%= f.password_field :password, autocomplete: "new-password", class:"w-full rounded-md text-black" %>
    </div>
    <div class="my-4">
      <%= f.label :password_confirmation, t("edit_user.new_password_confirmation") %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full rounded-md text-black" %>
    </div>
    <div class="my-4">
      <%= f.label :current_password, t("edit_user.current_password.label")%>
      <p class="mb-2 text-sm"><%= t("edit_user.current_password.description")%> </p>
      <%= f.password_field :current_password, autocomplete: "current-password", class:"w-full rounded-md text-black" %>
    </div>
    <div class="p-2 my-8 text-center rounded-md bg-amber-900">
      <%= f.submit t("edit_user.update"), class:"w-full cursor-pointer" %>
    </div>
  <% end %>
</div>