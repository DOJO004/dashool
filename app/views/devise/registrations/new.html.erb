<div class="flex items-center justify-center gap-2 mx-auto mt-20 max-w-[1440px]">
  <div class="hidden mx-auto lg:block">
    <%= image_tag "logo_with_text.png"%>
  </div>
  <div class="w-full max-w-[512px]  mx-auto ">
    <h2 >Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="relative my-4">
        <%= image_tag "icons/email.svg", class:" absolute top-1/2 -translate-y-1/2 left-2"%>
        <%= f.email_field :email, autocomplete: "email", class:"w-full  text-black bg-gray-300 pl-12", placeholder:"email" %>
      </div>
      <div class="relative my-4">
        <%= image_tag "icons/lock.svg", class:" absolute top-1/2 -translate-y-1/2 left-2"%>
        <%= f.password_field :password, class:"w-full  text-black bg-gray-300 pl-12", placeholder:"password" %>
      </div>
      <div class="relative my-4">
        <%= image_tag "icons/check_circle.svg", class:" absolute top-1/2 -translate-y-1/2 left-2"%>
        <%= f.password_field :password_confirmation, class:"w-full  text-black bg-gray-300 pl-12", placeholder:"check your password" %>
      </div>
      <div class="my-4 text-center bg-rose-950">
        <%= f.submit "Sign up", class:"w-full cursor-pointer p-2" %>
      </div>
    <% end %>
    <div class="relative my-12">
      <hr>
      <p class="absolute top-0 w-12 text-center -translate-x-1/2 -translate-y-1/2 bg-black left-1/2">or</p>
    </div>
    <div class="flex justify-center my-12">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false } do%>
          <%= image_tag "google_icon.png", class:"w-8"%>
        <% end %>
      <% end %>
    </div>
    <div class="flex justify-center gap-2">
      <p>Already have an account?</p>
      <%= link_to "Log In", new_session_path(resource_name), class:"text-blue-500" %><br />
    </div>
  </div>
</div>