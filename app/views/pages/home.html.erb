<div>
  <div>
    <h1 class="text-4xl text-center ">Dashool</h1>
    <h2 class="text-2xl text-center ">The largest cocktail community in Taiwan</ㄘ>
  </div>
  <input type="search" class="w-full mx-auto ">
  <div class="flex justify-center gap-4 my-4 ">
    <% @alcohol_category.each do |alcohol| %>
      <p><%= alcohol %> </p>
    <% end %>
  </div>
  <div>
    <h3 class="text-xl ">Clasic Cocktail</h3>
    <div class="grid grid-cols-2 gap-6 ">
      <% @classic_cocktails.each do |cocktail|%>
        <div class="w-full ">
          <%= image_tag "https://fakeimg.pl/300x300", class:"w-full rounded-t-md"%>
          <div class="p-2 border rounded-b-md">
            <p class="text-xl "><%= cocktail.name %> </p>
            <p class="truncate "><%= cocktail.introduce %> </p>
            <div class="flex justify-end gap-2 ">
              <button>♥</button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
